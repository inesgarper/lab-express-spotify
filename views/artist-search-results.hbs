<div class="container">
    <h1>ARTISTS</h1>

    <hr>

    <div class="container">
        <div class="row">
            {{#each data.body.artists.items}}

            <div class="col-4 artist">
                <div class="card" style="width: 18rem;">
                    <img src="{{images.[1].url}}" class="card-img-top" alt="{{name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <a href="/albums/{{id}}" class="btn btn-primary">View Albums</a>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</div>